{
    "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": ["**", "!**/public/fonts"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineEnding": "lf",
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "useExhaustiveDependencies": "warn",
                "useHookAtTopLevel": "error"
            },
            "style": {
                "noNonNullAssertion": "off"
            },
            "complexity": {
                "noStaticOnlyClass": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded",
            "jsxQuoteStyle": "double",
            "trailingCommas": "none",
            "arrowParentheses": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none",
            "indentWidth": 4
        }
    },
    "css": {
        "parser": {
            "cssModules": true,
            "tailwindDirectives": true
        }
    }
}
