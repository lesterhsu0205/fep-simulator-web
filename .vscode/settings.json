{
    "[html]": {
        // "editor.defaultFormatter": "vscode.html-language-features"
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[nginx]": {
        "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
    },
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },
    "editor.accessibilitySupport": "off",
    "editor.codeActionsOnSave": {
        "source.action.useSortedAttributes.biome": "explicit",
        "source.action.useSortedKeys.biome": "explicit",
        "source.action.useSortedProperties.biome": "explicit",
        "source.fixAll.biome": "explicit",
        "source.organizeImports.biome": "explicit"
    },
    "editor.defaultFormatter": "biomejs.biome",
    // 控制編輯器是否會自動摺疊匯入範圍。
    // "editor.foldingImportsByDefault": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.guides.bracketPairs": true,
    "editor.linkedEditing": true,
    "editor.maxTokenizationLineLength": 32767,
    // 在編輯器中顯示垂直參考線，位於第 80 和 120 個字元位置
    // "editor.rulers": [80, 120],
    "explorer.confirmDragAndDrop": false,
    "files.associations": {
        "*.yml": "yaml"
    },
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "gitlens.blame.format": "${message|50?} ${agoOrDate|14-} ${author|14-}",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "vsicons.dontShowNewVersionMessage": true
}
